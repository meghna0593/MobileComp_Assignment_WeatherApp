<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/cityTxt"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:hint="@string/city"
        android:layout_alignParentStart="true"
        android:background="@drawable/edit_text_style"
        android:layout_marginHorizontal="55dp"
        android:paddingHorizontal="15sp"

        />
    <Button
        android:id="@+id/btnSearch"
        android:layout_marginTop="15sp"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_below="@+id/cityTxt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:textColor="@color/white"
        android:text="@string/btn_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/linear_layout_border"
        android:layout_below="@+id/btnSearch"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/showCity"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGrey"
            android:text="@string/city_search"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10sp"
            />
        <ImageView
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:id="@+id/weatherIcon"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5sp"
            />
        <TextView
            android:id="@+id/showTemp"
            android:textSize="75dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/darkGrey"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_marginStart="10sp"
            />
        <TextView
            android:id="@+id/showMaxMinTemp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGrey"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_marginStart="10sp"
            />
        <TextView
            android:id="@+id/showMain"
            android:layout_marginTop="30sp"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/darkGrey"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10sp"
            />
        <TextView
            android:id="@+id/showDesc"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/darkGrey"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10sp"
            />
        <TextView
            android:id="@+id/showHumidClouds"
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/darkGrey"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:layout_marginBottom="10sp"
            />

    </LinearLayout>

</RelativeLayout>